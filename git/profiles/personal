# vim: ft=gitconfig
[user]
  name = Marcelo Boeira
  email = marcelo@boeira.me

[include]
  path = github

[color]
  status = auto
  branch = auto
  log = auto
  commit = auto
  diff = auto
  interactive = auto
  ui = true
  pager = true

[color "branch"]
  current = yellow
  local = green
  remote = cyan

[color "diff"]
  meta = yellow
  frag = cyan
  old = red
  new = green

[color "status"]
  added = green
  changed = yellow
  untracked = blue

[core]
  pager = less -FRX~
  whitespace=fix,-indent-with-non-tab,trailing-space,space-before-tab,cr-at-eol

[diff]
  ignoreSubmodules = dirty
  compactionHeuristic = true

[pager]
  diff = diff-so-fancy | less -FRX~
  show = diff-so-fancy | less -FRX~

[diff-so-fancy]
  markEmptyLines = false

[alias]
  a = add
  ap = add -p
  aa = add --all
  alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\\t=> \\2/' | sort
  l = log
  lg = log --graph --pretty=format:'%C(yellow)%h %Cblue%aN %Cgreen%ar %Creset%s%Cred%d%Creset'
  ls = log --stat
  last = log -1 HEAD
  w = log --name-status
  s = status
  sw = show
  d = diff
  ds = diff --staged
  dc = diff --cached
  ss = status -s
  co = checkout
  cf = "!git show | grep '^U.\\|^.U' --color"
  ccf = "!git cf | wc -l"
  b = branch
  br = branch
  pl = pull
  plr = pull --rebase --autostash
  ps = push
  pso = push origin
  psom = push origin master
  r = remote
  unstage = reset HEAD --
  this = !git init && git add . && git commit -m \"Initial commit.\"
  t = !git this
  amend = !git log -n 1 --pretty=tformat:%s%n%n%b | git commit -F - --amend
  ignore = "!i() { touch .gitignore && echo $1 >> .gitignore; }; i"
  shame = "!s() { git blame $1 -p | grep 'author ' | cut -d' ' -f2-10 | sort | uniq -c | sort | tail -n1 | cut -c6-30 ; }; s"
  shout = "!s() { git shame $1 | say; }; s"
  ranking = shortlog -s -n
  c  = commit -S
  cm = commit -S
  cma = commit -S --amend
  cman = commit -S --amend --no-edit

[push]
  default = simple

[pull]
  rebase = preserve

[branch]
  autosetuprebase = always

[tag]
  sort = version:refname

[credential]
  helper = osxkeychain

[commit]
 # gpgsign = true

[gpg]
 # program = /usr/local/bin/gpg
[filter "lfs"]
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
  clean = git-lfs clean -- %f
